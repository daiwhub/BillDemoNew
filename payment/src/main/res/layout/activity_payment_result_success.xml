<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PaymentResultSuccessActivity">

    <ImageView
        android:id="@+id/ac_payment_result_success_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_qr_code"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ac_payment_result_success_hint_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ac_payment_result_success_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Collection Successful"
        android:textColor="@color/color_b9683f"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/ac_payment_result_success_iv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/ac_payment_result_success_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ac_payment_result_success_iv" />

    <TextView
        android:id="@+id/ac_payment_result_success_amount_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_black"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ac_payment_result_success_iv"
        tools:text="9.00 SGD" />

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ac_payment_result_success_amount_tv" />

    <TextView
        android:id="@+id/ac_payment_result_success_time_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Payment Time"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1" />

    <TextView
        android:id="@+id/ac_payment_result_success_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="2020-02-18 21:51:31"
        android:textColor="@color/color_black"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/ac_payment_result_success_time_hint_tv"
        app:layout_constraintLeft_toRightOf="@id/ac_payment_result_success_time_hint_tv"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="2020-02-18 21:51:31" />

    <TextView
        android:id="@+id/ac_payment_result_success_provider_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Payment Provider"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ac_payment_result_success_time_hint_tv" />

    <TextView
        android:id="@+id/ac_payment_result_success_provider_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Wechat Pay"
        android:textColor="@color/color_black"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/ac_payment_result_success_provider_hint_tv"
        app:layout_constraintLeft_toRightOf="@id/ac_payment_result_success_provider_hint_tv"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Wechat Pay" />
</android.support.constraint.ConstraintLayout>