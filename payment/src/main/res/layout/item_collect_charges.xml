<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <ImageView
        android:id="@+id/item_collect_charges_check_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_uncheck"
        android:button="@null"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@id/item_collect_charges_waybillno_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_collect_charges_waybillno_tv" />

    <TextView
        android:id="@+id/item_collect_charges_waybillno_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text=""
        android:textColor="@color/color_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/item_collect_charges_check_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SF1011623405076" />

    <TextView
        android:id="@+id/item_collect_charges_sum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_black"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/item_collect_charges_waybillno_tv"
        app:layout_constraintRight_toLeftOf="@id/item_collect_charges_details_tv"
        app:layout_constraintLeft_toRightOf="@id/item_collect_charges_waybillno_tv"
        tools:text="9.00 SGD" />


    <TextView
        android:id="@+id/item_collect_charges_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="details"
        android:textColor="@color/color_b9683f"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/item_collect_charges_waybillno_tv"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>